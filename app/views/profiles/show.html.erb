
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>User details</h4>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <tbody>
      <tr>
        <td><b>Name:</b></td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td><b>Email:</b></td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td><b>Password:</b></td>
        <td><i>(not shown)</i></td>
      </tr>
      <% if current_user.is_admin or current_user.is_issuer %>
      <tr>
        <td><b>Is issuer:</b></td>
        <td><%= @user.is_issuer %></td>
      </tr>
      <tr>
        <td><b>Is admin:</b></td>
        <td><%= @user.is_admin %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Edit Profile', edit_profile_path(@user), class: "btn btn-primary active", type: :button %>
  </div>
</div>

<% if current_user.is_admin %>
  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'Back to user list', profiles_path, class: "btn btn-primary active", type: :button %>
    </div>
  </div>
<% end %>
